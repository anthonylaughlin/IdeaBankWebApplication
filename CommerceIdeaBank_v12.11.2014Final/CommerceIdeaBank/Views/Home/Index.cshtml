@model IEnumerable<CommerceIdeaBank.Models.ProjectViewModel>
@using CommerceIdeaBank.GlobalConstants

@{
    ViewBag.Title = "IdeaBank";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="data_view">
    <table class="contribution_table">
        <tr>
            <th>
                Project Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostDate)
            </th>
        </tr>
        @if(Model != null && Model.ToList().Count != 0)
        {
            foreach (var item in Model)
            {
                if (item == null)
                {
                    continue;                
                }
                else
                {
                    <tr>
                        <td class="project_name" id="project_name_col">
                            @Html.ActionLink(item.ProjectName, ActionName.AN_VIEW_IDEA , new { id = item.ProjectID })
                            <div class="description_field">
                                Description:
                                @Html.DisplayFor(modelItem => item.ProjectDesc)
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostDate)
                        </td>
                    </tr>
                }
            }
        }
        else
        {
            //No ideas have been submitted yet
            <tr>
                <td>There are no ideas yet. You should be the first to contribute! :-) </td>
            </tr>
        }        

    </table>
</div>